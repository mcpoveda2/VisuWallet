{
  "extends": "expo/tsconfig.base",
  
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["nativewind/types", "react", "react-native"],
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"],
    "target": "ES2015",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
